---
import Footer from "@components/sections/Footer";
import PageAnimation from "@components/ui/PageAnimation";
export interface Props {
	title: string;
	description?: string;
	showFooter?: boolean;
	theme?: 'light' | 'dark';
	robots?: string;
}

const { title, description } = Astro.props;
const { showFooter = true, theme = 'dark', robots = "index, follow" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="favicon.webp" />
    
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="parenting islami, pendidikan anak islam, kuis parenting, aplikasi parenting, mendidik anak muslim, akhlak anak, adab islami, pola asuh islam, konsekuensi parenting, keputusan bijak parenting" />
    <meta name="author" content="Naandalist" />
    <meta name="robots" content={robots} />
    <meta name="googlebot" content={robots} />
    <meta name="language" content="Indonesian" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />
    
    <!-- Open Graph Meta Tags -->
    <meta name="dicoding:email" content="Listiananda.apriliawan@gmail.com" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={new URL('/og-image.png', Astro.url.origin).href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:site_name" content="Kuiskuensi - Aplikasi Parenting Islami" />
    <meta property="og:locale" content="id_ID" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:image" content={new URL('/og-image.png', Astro.url.origin).href} />
    
    {description && <meta name="description" content={description} />}
    {description && <meta property="og:description" content={description} />}
    {description && <meta name="twitter:description" content={description} />}
    
    <meta name="theme-color" content="#000000" />
    <title>{title}</title>
    <script>
      history.scrollRestoration = "manual";
      window.addEventListener("load", () => {
        window.scrollTo(0, 0);
      });
    </script>
  </head>
  <body class={theme === 'light' ? 'bg-white font-sans text-black' : 'bg-black font-sans text-white'}>
    <div class="mx-auto min-h-screen max-w-[800px]">
      <PageAnimation client:load>
        <main>
          <slot />
        </main>
        {showFooter && <Footer />}
      </PageAnimation>
    </div>
  </body>
</html>
